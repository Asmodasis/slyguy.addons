<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.youtube" name="YouTube for Trailers" provider-name="SlyGuy" version="99.0.13">
    <requires>
        <import addon="script.module.slyguy" version="0.80.8"/>
        <import addon="repository.slyguy.youtube"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py" provides="video">
        <provides>video</provides>
    </extension>
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="default.py">
                <label>$LOCALIZE[20410]</label>
                <visible>String.Contains(ListItem.Trailer,youtube)</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <description lang="en">A drop-in replacement over official Kodi YouTube add-on to allow for trailers playback without login / api key
NOTE: Does not allow browsing YouTube content. Simply for playback.</description>
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <license></license>
        <language></language>
        <website></website>
        <news>Add Trailer context menu item!</news>
        <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
